<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/reading">
        <ListPreference
            app:defaultValue="@string/ascending_value"
            app:entries="@array/order"
            app:entryValues="@array/order_values"
            app:key="order"
            app:useSimpleSummaryProvider="true"
            app:title="@string/article_order" />

        <ListPreference
            app:defaultValue="@string/default_sort_field_value"
            app:entries="@array/sort_field"
            app:entryValues="@array/sort_field_values"
            app:key="sort_field"
            app:useSimpleSummaryProvider="true"
            app:title="@string/sort_by" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/appearance">
        <ListPreference
            app:defaultValue="system"
            app:entries="@array/article_font"
            app:entryValues="@array/article_font_values"
            app:key="article_font"
            app:useSimpleSummaryProvider="true"
            app:title="Article Font" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="dark_theme"
            app:title="@string/dark_theme" />
    </PreferenceCategory>
</PreferenceScreen>