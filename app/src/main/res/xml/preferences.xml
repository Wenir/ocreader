<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/reading">
        <ListPreference
            android:defaultValue="@string/ascending_value"
            android:entries="@array/order"
            android:entryValues="@array/order_values"
            android:key="order"
            android:summary="%s"
            android:title="@string/article_order" />

        <ListPreference
            android:defaultValue="@string/default_sort_field_value"
            android:entries="@array/sort_field"
            android:entryValues="@array/sort_field_values"
            android:key="sort_field"
            android:summary="%s"
            android:title="@string/sort_by" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/appearance">
        <ListPreference
            android:defaultValue="system"
            android:entries="@array/article_font"
            android:entryValues="@array/article_font_values"
            android:key="article_font"
            android:summary="%s"
            android:title="Article Font" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_theme"
            android:title="@string/dark_theme" />
    </PreferenceCategory>
</PreferenceScreen>